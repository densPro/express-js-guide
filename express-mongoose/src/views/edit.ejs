<%- include('partials/_header'); %>

<div class="container">
  <div class="row">
    <!--FORM-->
    <div class="col-md-5 offset-md-3">
      <div class="card">
        <div class="card-body">
          <form action="/edit/<%= task._id %>" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" name="title" placeholder="Insert Title" value="<%= task.title %>">
            </div>
            <div class="form-group">
              <textarea class="form-control" name="description" placeholder="Insert a Description"
                cols="80"><%= task.description %></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-block">
              Update
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('partials/_footer'); %>